{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <form action="{{ path('login') }}" method="post" class="text-center max-w-screen-lg mx-auto">
        <h1 class="text-4xl font-bold my-4">Se connecter</h1>
        <div class="flex flex-col w-1/2 mx-auto mb-4">
            <label for="username" class="italic text-left sr-only">Utilisateur</label>
            <input type="text" placeholder="Utilisateur" name="username" id="username" class="p-2 rounded-lg"/>
        </div>
        <div class="flex flex-col w-1/2 mx-auto">
            <label for="password" class="italic text-left sr-only">Mot de passe</label>
            <input type="password" placeholder="Mot de passe" name="password" id="password" class="p-2 rounded-lg"/>
        </div>
        <button type="submit" class="border border-black rounded-lg py-2 px-4 mt-4">Se connecter</button>
    </form>

{% endblock %}